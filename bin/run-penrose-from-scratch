#!/usr/bin/env bash
eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)
export SSH_AUTH_SOCK
eval $(ssh-agent)

while true; do
  # log out to a file
  penrose-from-scratch &> ~/.penrose.log
  [[ $? > 0 ]] && mv ~/.penrose.log ~/prev-penrose.log
  export RESTARTED=true
done
